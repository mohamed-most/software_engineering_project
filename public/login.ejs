<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/alert.css" />
    <link rel="stylesheet" href="css/fontawesome.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link rel="shortcut icon" type="image/png" href="img/favicon.png" />
    <title>Natours | Travel planner</title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <script defer type="module" src="./js/login.js"></script>
    <script defer type="module" src="./js/alert.js"></script>
    <title>our fancy app</title>
  </head>
  <body style="background: linear-gradient(to right, #f7f7f7, #e8e8e8)">
    <!-- container of form  -->
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div
        class="container shadow-lg border-primary p-5 rounded"
        style="max-width: 400px"
      >
        <h1 class="text-primary text-center fst-italic text-center mb-4">
          Login
        </h1>
        <!-- dynamically added by js  -->
        <div class="errorMessage"></div>
        <!-- form -->
        <form class="login-form">
          <div class="mb-3">
            <label for="login-email" class="form-label">Email Address</label>
            <i class="fa fa-envelope"></i>
            <input
              type="email"
              class="form-control login-email"
              id="login-email"
              required
            />
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Please enter a valid email</div>
          </div>

          <div class="mb-3 position-relative">
            <label for="password" class="form-label">Password</label>
            <i class="fa fa-lock"></i>
            <input
              type="password"
              class="form-control password"
              id="password"
              required
            />
            <i
              class="fa-solid fa-eye position-absolute showPassword"
              style="top: 60%; right: 2%; color: lightgray"
              ;
              id="showPassword"
            ></i>
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Please enter a strong password</div>
          </div>

          <button type="submit" class="btn btn-primary w-100 submit-btn">
            Sign in
          </button>
          <!-- sign up  -->
          <div class="d-flex justify-content-start">
            <a href="/signup/user" class="btn btn-primary w-100 mt-2"
              >Sign up as user
            </a>
          </div>
          <div class="d-flex justify-content-start">
            <a href="/signup/company" class="btn btn-primary w-100 mt-2"
              >Sign up as company
            </a>
          </div>
        </form>
      </div>
    </div>
    <!-- <script src="./js/script.js"></script> -->
  </body>
</html>
